<h1>Tests list</h1>

<table>
  <tr>
    <th>Test</th>
    <th>Category</th>
    <th>Questions</th>
    <th>Actions</th>
  </tr>
  <% @tests.each do |test| %>
  <tr>
    <td><%= test.title %></td>
    <td><%= test.category.title %></td>
    <td><%= test.questions.count %></td>
    <td>
      <%= link_to 'Show', test_path(test) %>
    </td>
  </tr>
  <% end %>
</table>
