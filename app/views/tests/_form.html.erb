
<%= form_with model: @test do |f| %>
<%= render 'shared/errors', resource: @test %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :level %>
    <%= f.number_field :level %>
  </p>

  <p>
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>

  <p>
    <%= f.label :author_id %>
    <%= f.collection_select :author_id, User.all, :id, :name, prompt: true %>
  </p>

  <p><%= f.submit %></p>

<% end %>
