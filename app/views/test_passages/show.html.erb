<h1>Passing the <%= @test_passage.test.title %> test</h1>
<small>
    Progress:
    <%= @test_passage.test.questions.index(@test_passage.current_question) + 1 %>
    /
    <%= @test_passage.test.questions.count %>
</small>
<br>

<h4><%= @test_passage.current_question.body %></h4>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids,
                                  @test_passage.current_question.answers,
                                  :id,
                                  :body,
                                  include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>

  <%= form.submit 'Next' %>
  
<% end %>


