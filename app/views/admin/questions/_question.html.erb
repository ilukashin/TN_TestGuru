<tr>
    <td><%= question.body %></td>
    <td><%= link_to t('.show'), admin_question_path(question), class: 'badge badge-info' %></td>
    <td><%= link_to t('.edit'), edit_admin_question_path(question), class: 'badge badge-warning' %></td>
    <td><%= link_to t('.delete'), admin_question_path(question),
                              method: :delete,
                              data: { confirm: t('.delete_confirm') },
                              class: 'badge badge-danger' %></td>
  </tr>
