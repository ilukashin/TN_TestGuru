<tr>
    <td class="align-middle"><%= badge.name %></td>
    <td class="align-middle"><%= badge.logo %></td>
    <td class="align-middle"><%= badge.rule %></td>

    <td class="align-middle"><%= link_to 'Show',
                                         admin_badges_path(badge),
                                         class: 'badge badge-info' %></td>
    <td class="align-middle"><%= link_to 'Edit',
                                         edit_admin_badge_path(badge),
                                         class: 'form-inline-link badge badge-warning' %>
    </td>
    <td class="align-middle"><%= link_to 'Delete', admin_badges_path(badge),
                              method: :delete,
                              data: { confirm: 'Are you sure?' },
                              class: 'badge badge-danger' %>
    </td>
</tr>
