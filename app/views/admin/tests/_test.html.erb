<tr>
    <td><%= test.title %></td>
    <td><%= test.category.title %></td>
    <td><%= test.questions.count %></td>
    <td><%= link_to t('.show'), admin_test_path(test), class: 'badge badge-info' %></td>
    <td><%= link_to t('.edit'), edit_admin_test_path(test), class: 'badge badge-warning' %></td>
    <td><%= link_to t('.delete'), admin_test_path(test),
                              method: :delete,
                              data: { confirm: t('.delete_confirm') },
                              class: 'badge badge-danger' %>
    </td>
</tr>
