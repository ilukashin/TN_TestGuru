<%= form_with url: feedback_path, local: true do |form| %>
  <div class="form-group">
    <p>
      <%= form.label :text %>
      <%= form.text_area :text, class: 'form-control' %>
    </p>
  </div>  
  <div class="form-group">
    <p>
      <%= form.submit 'Send', class: 'btn btn-info' %>
    </p>
  </div>
<% end -%>
